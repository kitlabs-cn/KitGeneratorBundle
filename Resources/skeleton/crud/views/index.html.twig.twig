{% block extends %}
{{ "{% extends 'base.html.twig' %}" }}
{% endblock extends %}

{% block body %}
{{ "{% block body %}" }}
    	<div class="panel admin-panel">
    		<div class="panel-head">
    			<strong>{{ entity_pluralized|capitalize }}列表</strong>&nbsp;&nbsp;&nbsp;
    			<a class="button bg-blue" href="{{ '{{ path(\'' ~ route_name_prefix ~'_new\') }}' }}">新增</a>
    		</div>
        {{'{% if pagination is defined and pagination is not empty %}' }}
    		<table class="table table-hover">
    			<tr>
    				{%- for field, metadata in fields %}
					<th>{{ field|capitalize }}</th>
                    {%- endfor %}
    				<th width="200">操作</th>
    			</tr>
            {{ '{% for item in pagination %}' }}
    			<tr id="item_{{ '{{ item.id }}' }}">
    				
    				<td>{%- for field, metadata in fields %}
    					{% if metadata.type in ['datetime'] %}
    						{{ '{{ item.' ~ field ~ '|date(\'Y-m-d H:i:s\') }}' }}
    					{% else %}
    					{{ '{{ item.' ~ field ~ ' }}' }}
    					{% endif %}
    				{%- endfor %}</td>
    				<td>
    					<a class="button border-yellow button-little" href="{{ '{{ path(\'' ~ route_name_prefix ~'_edit\', { \'id\': item.id }) }}' }}">编辑</a>
    				    <a class="button border-green button-little" href="{{ '{{ path(\'' ~ route_name_prefix ~'_show\', { \'id\': item.id }) }}' }}">查看</a>
    				    <a class="button border-red button-little" href="#" onclick="{
    					if(confirm('确认删除?')){return delItem({{ '{{ item.id }}' }});}returnfalse;}">删除</a>
    				    </td>
    			</tr>
    			{{ '{% endfor %}' }}
    		</table>
    			{{ '{{ knp_pagination_render(pagination,\'pagination_pintuer.html.twig\') }}' }}
    	    {{ '{% endif %}' }}
    	</div>
{{ "{% endblock %}" }}
{{ '{% block js %}' }}
<script>
   function delItem(id){
	   $.post("{{ '{{ path(\'' ~ route_name_prefix ~ '_delete\') }}' }}", { id: id },
			   function(data){
			     if(data.status == 1){
				     $('#item_'+id).hide();
				     	layer.msg(data.msg);
				     }else{
				    	 layer.msg(data.msg);}
			   }, "json");
	}
</script>
{{ '{% endblock %}' }}
{% endblock body %}
